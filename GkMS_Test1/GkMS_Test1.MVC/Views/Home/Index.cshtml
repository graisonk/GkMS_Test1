@model GkMS_Test1.MVC.Models.UserPrinterVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="LinkDevice">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <h4 class="col-md-4">Link - User/Printer</h4>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="form-group" style="float:right">
                <input type="submit" value="Link" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PrinterId" class="control-label"></label>
            <input asp-for="PrinterId" class="form-control" />
            <span asp-validation-for="PrinterId" class="text-danger"></span>
        </div>
    </div>
</form>