
@model IEnumerable<GkMS_Test1.Users.Domain.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <h4 class="col-md-4">Index - Users</h4>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <div style="float:right">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GstNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanNo)
            </th>                        
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.GstNo)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PanNo)
                </td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
