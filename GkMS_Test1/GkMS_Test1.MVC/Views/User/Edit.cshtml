<script src="~/js/site.js"></script>
<script>
    $(document).ready(function () {
        $('.chkCopy').click(function () {
            if ($(this).is(":checked"))
                $('#Username').val($('#Personal_Email').val());
            else
                $('#Username').val("");
        });

        $('.chkLogin').click(function () {
            if ($(this).is(":checked")) {
                $('#Username').attr("readonly", false);
                $('#Username').attr("required", false);
                $('.chkCopy').attr("disabled", false);
            }
            else {
                $('#Username').val("");
                $('#Username').attr("readonly", true);
                $('#Username').attr("required", true);
                $('.chkCopy').attr("disabled", true);
            }

        });
    });
</script>

