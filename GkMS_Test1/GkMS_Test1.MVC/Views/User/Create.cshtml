@model GkMS_Test1.MVC.Models.UserProfileVM

@{
    ViewData["Title"] = "Create";
}

<script src="~/js/Customer.js"></script>

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <h4 class="col-md-4">Register - New User</h4>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="form-group" style="float:right">
                <a asp-action="Index">Back to List</a>
                <span> | </span>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-9">
            <div class="form-group">
                <label asp-for="User.Name" class="control-label"></label>
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Personal.Address_Bill" class="control-label">Current Address</label>
                    <textarea rows="4" asp-for="Personal.Address_Bill" class="form-control Address1"></textarea>
                    <span asp-validation-for="Personal.Address_Bill" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Personal.Address_Install" class="control-label">Permanent Address</label>
                    <input type="checkbox" id="chkCopy" />
                    <textarea rows="4" asp-for="Personal.Address_Install" class="form-control Address2"></textarea>
                    <span asp-validation-for="Personal.Address_Install" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Personal.Phone" class="control-label"></label>
                <input asp-for="Personal.Phone" class="form-control" />
                <span asp-validation-for="Personal.Phone" class="text-danger"></span>
            </div>

            <div class=" form-group">
                <label asp-for="Personal.Email" class="control-label"></label>
                <input asp-for="Personal.Email" class="form-control" />
                <span asp-validation-for="Personal.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="User.GstNo" class="control-label"></label>
                <input asp-for="User.GstNo" class="form-control" />
                <span asp-validation-for="User.GstNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PanNo" class="control-label"></label>
                <input asp-for="User.PanNo" class="form-control" />
                <span asp-validation-for="User.PanNo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <div class="row">                
                <div>
                    <input type="button" class="add-row" value="+ Printer">
                    <button type="button" class="delete-row">- Printer</button>
                </div>
            </div>
            <div class="row">
                <table id="tblData" title="Printers Installed" class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>Printer</th>
                            <th>Installation Date</th>
                            <th>Contract Period</th>
                            <th>Deposit Amt.</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
