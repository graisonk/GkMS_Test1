@model GkMS_Test1.Printers.Domain.Models.Printer

@{
    ViewData["Title"] = "Details";
}

@*<link href="~/css/Printer.css" rel="stylesheet" />*@

<div class="row">
    <h4 class="col-md-4">Details - MPS Printer</h4>
    <div class="col-md-4">
        <div id="DelConfirm" style="display:none" class="form-group">
            <span style="font-style:italic;font-weight:bold;margin:6px 0;float:left;">Do you really want to Delete ? </span>
            <form asp-action="Delete" asp-route-id=@Model.Id>
                <input type="submit" value="Yes" class="btn btn-danger" style="margin: -2px 9px" />
                <a href="#" class="btn btn-primary" onclick="DelProfile(false)">No</a>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <div id="DelPrompt" class="form-group" style="float:right">
            <a asp-action="Index">Back to List</a>
            <span> | </span>
            <a asp-action="Edit" asp-route-id=@Model.Id class="btn btn-primary">Edit</a>
            <span> | </span>
            <a href="#" class="btn btn-danger" onclick="DelProfile(true)">Delete</a>
            @*<button id='deleteRecord' data-model-id="@Model.Master.Id">delete</button>*@
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="row col-md-6">
        <div class="row col-md-12 form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="row col-md-12 form-group">
            <label asp-for="Serial" class="control-label"></label>
            <input asp-for="Serial" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Hsn" class="control-label"></label>
                    <input asp-for="Hsn" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Cgst" class="control-label"></label>
                    <input asp-for="Cgst" class="form-control" type="number" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Sgst" class="control-label"></label>
                    <input asp-for="Sgst" class="form-control" type="number" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("input, textarea").prop("readonly", true);
        $("select").prop("disabled", true);
    });
</script>
